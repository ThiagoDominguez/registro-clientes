<%- include ("partials/_header") %>

<div class="container">
  <div class="row mt-5">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>NÂ°</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if(data){%> <% for(let i = 0 ; i< data.length;i++){%>
          <tr>
            <td><%= i+ 1%></td>
            <td><%= data[i].name%></td>
            <td><%= data[i].address%></td>
            <td><%= data[i].phone%></td>
            <td>
              <a
                href="/delete/<%= data[i].id%>"
                class="btn btn-danger btn-sm btn-hover rounded-2 fs-5 w-100"
                ><i class="bi bi-trash fs-5"></i>Delete</a
              >

              <a
                href="/update/<%= data[i].id%>"
                class="btn btn-success mt-1 btn-sm btn-hover rounded-2 fs-5 w-100"
                ><i class="bi bi-pencil fs-5"></i>Edit</a
              >
            </td>
          </tr>
          <%} %> <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group">
              <input
                type="text"
                name="name"
                placeholder="Name"
                class="form-control"
              />
            </div>
            <div class="form-group mt-1">
              <input
                type="text"
                name="address"
                placeholder="Address"
                class="form-control"
              />
            </div>
            <div class="form-group mt-1">
              <input
                type="text"
                name="phone"
                placeholder="Phone"
                class="form-control"
              />
              <button
                type="submit"
                class="btn btn-info mt-2 btn-hover rounded-2"
              >
                Save customer
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
