<%- include("partials/_header") %>

<div class="container">
  <div class="card-body">
    <form action="/update/<%= data.id%>" method="post">
      <div class="form-group">
        <input
          type="text"
          name="name"
          placeholder="Name"
          value="<%= data.name%>"
          class="form-control"
        />
      </div>
      <div class="form-group mt-1">
        <input
          type="text"
          name="address"
          placeholder="Address"
          value="<%= data.address%>"
          class="form-control"
        />
      </div>
      <div class="form-group mt-1">
        <input
          type="text"
          name="phone"
          placeholder="Phone"
          value="<%= data.phone%>"
          class="form-control"
        />
        <button type="submit" class="btn btn-info rounded-2 mt-2">
          Edit customer
        </button>
      </div>
    </form>
  </div>
</div>
<%- include("partials/_footer") %>
